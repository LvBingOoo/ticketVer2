<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/div_gray"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:visibility="gone"
        android:id="@+id/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/sr_color_primary"
        android:minHeight="48dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/dm_topbar_left"
        app:title="" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/topbar_title"/>
    </android.support.v7.widget.Toolbar>
    <com.hhhc.obsessive.library.widgets.BrowserLayout
        android:fitsSystemWindows="true"
        android:id="@+id/common_web_browser_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>