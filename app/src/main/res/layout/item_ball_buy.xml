<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ball_root"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/item_ball_buy_fl"
        android:background="@drawable/selector_ball"
        android:layout_marginTop="2dp"
        android:layout_width="35dp"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/item_ball_buy_num"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="@color/select_color_gametype"
            android:textSize="12sp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/ball_buy_miss"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textColor="@color/color_text_main_gray"
        android:textSize="10sp"/>
</LinearLayout>