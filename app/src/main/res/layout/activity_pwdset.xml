<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/w_common_toolbar"/>
    <LinearLayout
        android:id="@+id/pwdset_old_ll"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_main_black"
            android:textSize="14sp"
            android:text="输入旧密码"/>
        <EditText
            android:id="@+id/pwdset_old_pwd"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:inputType="textPassword"
            android:hint="6-12位英文或数字"
            android:textColor="@color/color_text_main_gray"/>
    </LinearLayout>
    <View style="@style/divider_horizontal"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_main_black"
            android:textSize="14sp"
            android:text="输入新密码"/>
        <EditText
            android:id="@+id/pwdset_new_pwd"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:inputType="textPassword"
            android:hint="6-12位英文或数字"
            android:textColor="@color/color_text_main_gray"/>
    </LinearLayout>
    <View style="@style/divider_horizontal"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_main_black"
            android:textSize="14sp"
            android:text="再次输入新密码"/>
        <EditText
            android:id="@+id/pwdset_new2_pwd"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="14sp"
            android:gravity="right|center_vertical"
            android:inputType="textPassword"
            android:hint="6-12位英文或数字"
            android:textColor="@color/color_text_main_gray"/>
    </LinearLayout>
    <View style="@style/divider_horizontal"/>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ripple_bt_red"
        android:text="确定修改"
        android:id="@+id/bt_ok"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</LinearLayout>