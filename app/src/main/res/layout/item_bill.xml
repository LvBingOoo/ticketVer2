<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_chongzhijilv_root"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_chongzhijilv_top"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/bg_rect_corners_home_top_icon"/>
    <LinearLayout
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_ct_type"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线充值"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_main_black"
                    android:singleLine="true"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/item_ct_time"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-11-08 12：23"
                    android:textSize="10sp"
                    android:textColor="@color/color_text_main_black"
                    android:singleLine="true"/>
            </LinearLayout>

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/item_ct_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3322"
                android:textSize="15sp"
                android:textColor="@color/color_text_orange"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/divider_horizontal"/>
</LinearLayout>