<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_root"
    android:orientation="vertical">
    	<com.cc.util.AbScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <include layout="@layout/w_common_toolbar_home"/>
			<ImageView
				android:layout_marginLeft="70dp"
				android:layout_marginRight="70dp"
				android:layout_marginTop="50dp"
				android:layout_marginBottom="35dp"
				android:scaleType="fitCenter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:src="@mipmap/a_login_1"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:layout_marginLeft="20dp"
					android:layout_marginBottom="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#80ffffff"
					android:textSize="12sp"
					android:text="账号"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:layout_marginLeft="@dimen/margin_size_40_20dp"
					android:layout_marginRight="@dimen/margin_size_40_20dp">
					<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@null"
                        android:layout_weight="1"
						android:id="@+id/login_user"
                        android:singleLine="true"
						android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
						android:hint="请输入账号"/>
				</LinearLayout>

				<TextView
                    android:id="@+id/user_ll"
					android:layout_marginTop="@dimen/margin_size_32_16dp"
					android:layout_marginBottom="@dimen/margin_size_32_16dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:background="@color/div_gray2"
					style="@style/divider_horizontal"/>
			</LinearLayout>
			<TextView
				android:layout_gravity="left"
				android:layout_marginLeft="20dp"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#80ffffff"
				android:textSize="12sp"
				android:text="密码"/>
			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@null"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:hint="请输入密码"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
				android:id="@+id/login_pwd"
				android:inputType="textPassword"
				android:textSize="15sp"/>

        <TextView
			 android:layout_marginTop="@dimen/margin_size_32_16dp"
			 android:layout_marginBottom="@dimen/margin_size_32_16dp"
			 android:layout_marginLeft="@dimen/margin_size_40_20dp"
			 android:layout_marginRight="@dimen/margin_size_40_20dp"
			 android:background="@color/div_gray2"
			 style="@style/divider_horizontal"/>

        <Button
			android:layout_marginLeft="@dimen/margin_size_40_20dp"
            android:layout_marginRight="@dimen/margin_size_40_20dp"
            android:layout_marginTop="30dp"
			android:background="@drawable/ripple_bt_red"
            android:text="登录"
            android:id="@+id/login_ok"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
			<Button
				android:layout_marginLeft="@dimen/margin_size_40_20dp"
				android:layout_marginRight="@dimen/margin_size_40_20dp"
				android:layout_marginTop="15dp"
				android:background="@drawable/bg_rect_corners_gray222"
				android:text="立即注册"
				android:textSize="14sp"
				android:id="@+id/login_register_bt"
				android:textColor="@color/white"
				android:layout_width="match_parent"
				android:layout_height="40dp"/>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<Button
					android:layout_marginLeft="60dp"
					android:layout_marginRight="@dimen/margin_size_40_20dp"
					android:layout_marginTop="@dimen/margin_size_40_20dp"
					android:visibility="invisible"
					android:text="忘记密码"
					android:background="@null"
					android:textSize="12sp"
					android:textColor="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			</RelativeLayout>
        </LinearLayout>

    </com.cc.util.AbScrollView>

</LinearLayout>
