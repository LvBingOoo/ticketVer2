<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/w_common_toolbar"/>

    <LinearLayout
        android:id="@+id/person_header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像"
            android:textSize="14sp"
            android:textColor="@color/color_text_main_black"/>
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/person_header"
           android:layout_marginTop="15dp"
           android:layout_marginBottom="15dp"
           android:layout_marginRight="10dp"
           android:layout_width="36sp"
           android:layout_height="36sp"
           android:src="@mipmap/test_logo2"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/a_right_cion"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_main_gray"
        android:textSize="14sp"
        android:text="基本信息"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="14sp"
            android:textColor="@color/color_text_main_black"/>
        <EditText
            android:id="@+id/person_nickname"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入昵称"
            android:textSize="12sp"
            android:textColor="@color/color_text_main_gray"/>
    </LinearLayout>
    <View style="@style/divider_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="14sp"
            android:textColor="@color/color_text_main_black"/>
        <EditText
            android:id="@+id/person_qq"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入QQ"
            android:textSize="12sp"
            android:textColor="@color/color_text_main_gray"/>
    </LinearLayout>
    <View style="@style/divider_horizontal"/>
</LinearLayout>