<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@mipmap/a_top_big_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <LinearLayout
            android:paddingLeft="@dimen/margin_size_20_10dp"
            android:paddingRight="@dimen/margin_size_20_10dp"
            android:paddingTop="@dimen/topbar_hegiht_top"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_buy_header_civ"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/test_logo2"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_size_20_10dp"
                    android:layout_marginRight="@dimen/margin_size_20_10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@drawable/bg_rect_corners_home_leve"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/home_buy_leve"
                        android:drawablePadding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="15"
                        android:textSize="9sp"
                        android:id="@+id/home_buy_leve_tv"
                        android:textColor="@color/white"
                        android:text="Lv.0"/>
                    <TextView
                        android:id="@+id/home_buy_nickname_tv"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="Piter ZhangPiter"/>
                </LinearLayout>
                <ImageView
                    android:paddingLeft="@dimen/margin_size_20_10dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_buy_msg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/home_buy_money_tv"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/color_text_orange2"
                    android:textSize="24sp"
                    android:drawableLeft="@mipmap/home_buy_money"
                    android:drawablePadding="10dp"
                    android:text="¥0.00"/>
                <TextView
                    android:id="@+id/home_buy_pay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textSize="10sp"
                    android:text="充值"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:background="@drawable/ripple_bt_orange"/>
                <TextView
                    android:id="@+id/home_buy_tixian_tv"
                    android:layout_marginLeft="@dimen/margin_size_30_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textSize="10sp"
                    android:text="提现"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:background="@drawable/ripple_bt_blue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投注任务"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="#565b5f"/>
                <TextView
                    android:id="@+id/home_buy_task_tv"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/100"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="#565b5f"/>
            </LinearLayout>
            <android.support.v4.widget.ContentLoadingProgressBar
                android:id="@+id/home_buy_task_progress"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_bg"
                android:layout_width="match_parent"
                android:layout_height="3dp" />
        </LinearLayout>
    </RelativeLayout>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_marginTop="170dp"
        android:id="@+id/home_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>